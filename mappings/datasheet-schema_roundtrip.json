{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CM4AI ROCrate Datasheet",
  "description": "JSON Schema for validating CM4AI ROCrate Datasheets",
  "type": "object",
  "required": [
    "overview",
    "useCases",
    "composition"
  ],
  "properties": {
    "overview": {
      "type": "object",
      "required": [
        "title",
        "identifier",
        "version",
        "datePublished",
        "description",
        "contentSize",
        "authors",
        "publisher",
        "principalInvestigator",
        "contactEmail",
        "copyright",
        "license",
        "termsOfUse",
        "confidentialityLevel",
        "keywords",
        "citation",
        "funding",
        "completeness",
        "relatedPublications"
      ],
      "properties": {
        "title": {
          "type": "string",
          "description": "Title of the ROCrate"
        },
        "identifier": {
          "type": "string",
          "pattern": "^ark:[0-9]{5}/[a-zA-Z0-9_\\-\\.]+$",
          "description": "Identifier for the ROCrate"
        },
        "doi": {
          "type": "string",
          "format": "uri",
          "description": "DOI for the dataset"
        },
        "version": {
          "type": "string",
          "description": "Version number of the release"
        },
        "datePublished": {
          "type": "string",
          "format": "date",
          "description": "Publication date of the release"
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the dataset"
        },
        "contentSize": {
          "type": "string",
          "description": "Total size of the dataset"
        },
        "authors": {
          "type": "string",
          "description": "Authors of the dataset"
        },
        "publisher": {
          "type": "string",
          "description": "Publisher of the dataset"
        },
        "principalInvestigator": {
          "type": "string",
          "description": "Principal Investigator name and contact"
        },
        "dataGovernanceCommittee": {
          "type": "string",
          "description": "Data Governance Committee contact information"
        },
        "copyright": {
          "type": "string",
          "description": "Copyright statement"
        },
        "license": {
          "type": "string",
          "format": "uri",
          "description": "License URL"
        },
        "termsOfUse": {
          "type": "string",
          "description": "Terms of use information"
        },
        "confidentialityLevel": {
          "type": "string",
          "description": "HL7 Confidentiality Level"
        },
        "keywords": {
          "type": "string",
          "description": "Keywords describing the dataset"
        },
        "citation": {
          "type": "string",
          "description": "Recommended citation for the dataset"
        },
        "funding": {
          "type": "string",
          "description": "Funding grant numbers for the dataset"
        },
        "completeness": {
          "type": "string",
          "description": "Statement about the completeness of the data"
        },
        "relatedPublications": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Related publications"
        },
        "humanSubjects": {
          "type": "object",
          "properties": {
            "humanSubjectsResearch": {
              "type": "string",
              "enum": [
                "Yes",
                "No",
                "N/A"
              ]
            },
            "humanSubjectsExemptions": {
              "type": "string"
            },
            "deIdentifiedSamples": {
              "type": "string",
              "enum": [
                "Yes",
                "No",
                "N/A"
              ]
            },
            "fdaRegulated": {
              "type": "string",
              "enum": [
                "Yes",
                "No",
                "N/A"
              ]
            },
            "irb": {
              "type": "string"
            },
            "irbProtocolId": {
              "type": "string"
            }
          }
        }
      }
    },
    "useCases": {
      "type": "object",
      "required": [
        "intendedUses",
        "limitations",
        "prohibitedUses",
        "potentialSourcesOfBias",
        "maintenancePlan"
      ],
      "properties": {
        "intendedUses": {
          "type": "string",
          "description": "Intended uses of the dataset"
        },
        "limitations": {
          "type": "string",
          "description": "Limitations of the dataset"
        },
        "prohibitedUses": {
          "type": "string",
          "description": "Prohibited uses of the dataset"
        },
        "potentialSourcesOfBias": {
          "type": "string",
          "description": "Potential sources of bias in the dataset"
        },
        "maintenancePlan": {
          "type": "string",
          "description": "Plan for maintaining the dataset"
        }
      }
    },
    "composition": {
      "type": "object",
      "required": [
        "datasets"
      ],
      "properties": {
        "datasets": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "title",
              "identifier",
              "description",
              "authors",
              "size",
              "copyright",
              "license"
            ],
            "properties": {
              "title": {
                "type": "string",
                "description": "Title of the dataset"
              },
              "identifier": {
                "type": "string",
                "pattern": "^ark:[0-9]{5}/rocrate-[a-zA-Z0-9_\\-\\.]+/?$",
                "description": "Identifier for the dataset"
              },
              "provenanceId": {
                "type": "string",
                "pattern": "^ark:[0-9]{5}/evidence-graph-[a-zA-Z0-9_\\-\\.]+$",
                "description": "Provenance identifier for the dataset pointing to evidence graph for the dataset"
              },
              "description": {
                "type": "string",
                "description": "Description of the dataset"
              },
              "authors": {
                "type": "string",
                "description": "Authors of the dataset"
              },
              "date": {
                "type": "string",
                "format": "date",
                "description": "Date the dataset was created"
              },
              "size": {
                "type": "string",
                "description": "Size of the dataset"
              },
              "doi": {
                "type": "string",
                "format": "uri",
                "description": "DOI for the dataset"
              },
              "contact": {
                "type": "string",
                "format": "email",
                "description": "Contact email for the dataset"
              },
              "md5": {
                "type": "string",
                "pattern": "^[a-f0-9]{32}$",
                "description": "MD5 hash of the dataset"
              },
              "copyright": {
                "type": "string",
                "description": "Copyright statement"
              },
              "license": {
                "type": "string",
                "format": "uri",
                "description": "License URL"
              },
              "termsOfUse": {
                "type": "string",
                "description": "Terms of use information"
              },
              "keywords": {
                "type": "string",
                "description": "Keywords describing the dataset"
              },
              "funding": {
                "type": "string",
                "description": "Funding sources for the dataset"
              },
              "relatedPublications": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Related publications"
              },
              "content": {
                "type": "object",
                "properties": {
                  "files": {
                    "type": "object",
                    "properties": {
                      "count": {
                        "type": "integer",
                        "description": "Number of files"
                      },
                      "formats": {
                        "type": "string",
                        "description": "File formats"
                      },
                      "access": {
                        "type": "string",
                        "description": "Access information"
                      }
                    }
                  },
                  "software": {
                    "type": "object",
                    "properties": {
                      "count": {
                        "type": "integer",
                        "description": "Number of software/instruments"
                      },
                      "software": {
                        "type": "integer",
                        "description": "Number of software components"
                      },
                      "instruments": {
                        "type": "integer",
                        "description": "Number of instruments"
                      }
                    }
                  },
                  "inputs": {
                    "type": "object",
                    "properties": {
                      "count": {
                        "type": "integer",
                        "description": "Number of inputs"
                      },
                      "details": {
                        "type": "string",
                        "description": "Input details"
                      }
                    }
                  },
                  "otherComponents": {
                    "type": "object",
                    "properties": {
                      "experiments": {
                        "type": "integer",
                        "description": "Number of experiments"
                      },
                      "experimentDetails": {
                        "type": "string",
                        "description": "Experiment details"
                      },
                      "computations": {
                        "type": "integer",
                        "description": "Number of computations"
                      },
                      "computationDetails": {
                        "type": "string",
                        "description": "Computation details"
                      },
                      "schemas": {
                        "type": "integer",
                        "description": "Number of schemas"
                      },
                      "other": {
                        "type": "integer",
                        "description": "Number of other components"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}